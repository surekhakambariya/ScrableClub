<%= content_for :header do %>
    <h1>List of Games</h1>
  <% end %>
  
  <%= link_to 'Create Game', new_game_path %>
  <hr>
  
  <% if @games.blank? %>
    <p>Do not have any games.</p>
  <% else %>
    <table>
      <thead>
        <tr>
          <td>Name</td>
          <td>Description</td>
        </tr>
      </thead>
      <tbody>
        <% @games.each do |game| %>
          <tr>
            <td><%= link_to "#{game.title}", game_path(id: game.id) %></td>
            <td><%= game.description %></td>
            <td><%#= link_to 'Edit', edit_games_path(game) %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
  
  <hr>