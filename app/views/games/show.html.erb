<h1>Game Details</h1>
<hr>
<table>
  <tr>
    <td>
      <strong>Title : </strong>
    </td>
    <td>
      <%= @game.title %>
    </td>
  </tr>
</table>
<table>
  <tr>
    <td><b>Name</b></td>
    <td><b>Score</b></td>
    <td><b>Status</b></td>
  </tr>
  <% @game.participants.each do |participant| %>
    <tr>
      <td>
        <%= participant.member.full_name %>
      </td>
      <td>
        <%= participant.score %>
      </td>
      <td>
        <%= participant.status %>
      </td>
    </tr>
  <% end %>
</table> 
<hr>