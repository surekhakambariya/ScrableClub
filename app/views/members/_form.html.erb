<%= content_for :header do %>
    <h1>New Member</h1>
<% end %>
  
<%= form_for @member do |form| %>
    <% if @member.errors.any? %>
        <div id="error_explanation">
        <h2><%= pluralize(@member.errors.count, "error") %> prohibited this @member from being saved:</h2>

        <ul>
        <% @member.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
        </div>
    <% end %>
    <div class="form-group">
        <%= form.label :full_name, for: "full_name" %>
        <%= form.text_field :full_name, type: "full_name", class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :email, for: "email" %>
        <%= form.text_field :email, type: "email", class: "form-control", required: true %>
    </div>

    <div class="form-group">
        <%= form.label :mobile_number, for: "mobile_number" %>
        <%= form.text_field :mobile_number, type: "mobile_number", class: "form-control", required: true %>
    </div>

    <div class="form-group">
        <%= form.label :address, for: "address" %>
        <%= form.text_area :address, type: "address", class: "form-control", rows: "3" %>
    </div>
    
    <div class="form-group">
        <%= form.button :submit, class: 'btn btn-primary' %>
    </div>
<% end %>
  
<hr>